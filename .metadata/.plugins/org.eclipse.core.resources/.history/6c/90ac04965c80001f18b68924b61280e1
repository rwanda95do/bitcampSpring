			System.out.println("******************");
			System.out.println("번호 : ");
			int num = scan.nextInt();
			
			if(num == 5) {
				
			} else if(num == 1) {
				
			} else if (num == 2) {
				
			} else if (num == 3) {
				
			} else if (num == 4) {
				
			}
		}
	}

}
